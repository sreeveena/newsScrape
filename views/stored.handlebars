  <div class="modal fade" id="newScrapedArticles" tabindex="-1" role="dialog" aria-labelledby="scrapedModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="titleScrapedModal"></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">

          <div id="scrapedNote"></div>
        </div>
        <div class="modal-footer">
        </div>
      </div>
    </div>
  </div>

  <div style="padding-top: 100px" class="my-container">

    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-10">

      {{#each dbArticles}} 

        <div class="card d-inline-flex flex-row bd-highlight mb-3 text-wrap article" id="{{_id}}">
          <div class="card-body article">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text" style="word-wrap: break-word"><a href="{{link}}">{{link}}</a></p>
            <p class="card-text text-wrap">{{para}}</p>
            <button type="button" class="btn btn-success" id="saveArticle-btn" data-id="{{_id}}">Save Article</button>
          </div>
        </div>

      {{/each}}

      </div>
      <div class="col-md-1"></div>
    </div>

  </div>
